# ========================================
# AI Camera Counting System - Environment Variables
# ========================================

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_DB=people_counting_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=dev_jwt_secret_key_2024_ai_camera_system
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000

# ========================================
# FRONTEND CONFIGURATION
# ========================================
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_CAMERA_API_URL=http://localhost:3002/api/v1
REACT_APP_WS_URL=ws://localhost:3004

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# Uncomment and modify for production deployment
# CORS_ORIGIN=https://your-domain.com
# REACT_APP_API_URL=https://your-domain.com/api/v1
# REACT_APP_CAMERA_API_URL=https://your-domain.com/api/v1
# REACT_APP_WS_URL=wss://your-domain.com/ws

# ========================================
# MONITORING CONFIGURATION (Optional)
# ========================================
# GRAFANA_PASSWORD=your_grafana_password
# PROMETHEUS_RETENTION_DAYS=30

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# REDIS CONFIGURATION (beCamera only)
# ========================================
REDIS_HOST=becamera_redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================
WORKER_POOL_SIZE=4
MAX_CONNECTIONS=100 