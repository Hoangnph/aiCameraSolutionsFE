# Production Environment Variables
NODE_ENV=production
PYTHON_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=people_counting_db
DB_USER=postgres
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://postgres:your_secure_db_password_here@postgres:5432/people_counting_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
PORT=3002
API_VERSION=v1
CORS_ORIGIN=https://your-domain.com

# Worker Pool Configuration
WORKER_POOL_SIZE=4
WORKER_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/app/app.log

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=/var/uploads

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@your-domain.com

# External Services
AI_MODEL_ENDPOINT=https://api.openai.com/v1
AI_MODEL_API_KEY=your_openai_api_key_here

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Domain Configuration
DOMAIN=your-domain.com
PROTOCOL=https

# WebSocket Configuration
WS_PORT=3003
WS_HEARTBEAT_INTERVAL=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Performance Configuration
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30000 